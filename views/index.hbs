                {{!-- <input type="text" value="{{foods}}" id="foods" hidden> --}}
                {{!-- <div class="test" style="display:none">{{ foods}}</div> --}}

                {{#each foods}}
                <script>
                    id = '{{this.id}}'
                    name = '{{this.name}}'
                    price = '{{this.price}}'
                    food = {
                        id, name, price
                    }
                    foodList.push(food)

                </script>


                <div class="col-4 mt-1">
                    <div class="card text-center ">
                        <label class="card-body px-2">
                            <h5 class="card-title" id="{{this.id}}">{{this.name}}</h5>
                            <img src={{this.image}} alt="">
                            <h3 class="card-text">${{this.price}}</h3>
                            {{!-- <div class="card-text">$ <span data-drink-price>{{this.price}}</span></div> --}}
                            <div class="qty d-flex justify-content-around mt-1">
                                <button class="btn btn-outline-primary">+</button>
                                <h3 class="card-qty"> 1 </h3>
                                <button class="btn btn-outline-primary">-</button>
                            </div>

                            <button class="btn btn-outline-primary mt-1">加入菜單</button>
                            {{!-- <input type="radio" name="drink" value="Black Tea"> --}}
                        </label>
                    </div>
                </div>
                {{/each}}


            </div>

            <div class="text-right">
                <div class="btn btn-light" style="min-width:120px;" data-alpha-pos="add-drink">Add</div>
            </div>


        </div>

        {{!-- 左邊為已點餐點 --}}
        <div class="col-4 border">
            <div id="order">
                <div class="card mb-3">
                    <div class="card-body pt-3 pr-3">
                        <div class="text-right">
                            <span data-alpha-pos="delete-drink">×</span>
                        </div>
                        <h6 class="card-title mb-1">Black Tea</h6>
                        <div class="card-text text-right">X1</div>
                    </div>
                    <div class="card-footer text-right py-2">
                        <div class="card-text text-muted">$ <span data-drink-price>30</span></div>
                    </div>

                </div>
            </div>
        </div>






    </div>


</div>